<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.DetailSanPham">

    <Button
        android:id="@+id/btn_back_san_pham"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/baseline_arrow_back_ios_24"
        android:layout_margin="20dp"
        android:text="Chi tiết sản phẩm"
        android:textSize="20dp"
        android:textColor="@color/main_color"
        android:textStyle="bold"
        />
    <androidx.cardview.widget.CardView
        android:layout_margin="40dp"
        app:cardCornerRadius="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:padding="15dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:background="@color/gray_img"
                android:textColor="@color/gray_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thông tin sản phẩm" />
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:weightSum="6"
               >
               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_margin="20dp"
                   android:layout_weight="1"
                   >
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_margin="10dp"
                       android:text="Mã sản phẩm:"
                       android:textStyle="bold"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_margin="10dp"
                       android:text="Tên sản phẩm:"
                       android:textStyle="bold"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_margin="10dp"
                       android:text="Đơn vị tính:"
                       android:textStyle="bold"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_margin="10dp"
                       android:text="Loại sản phẩm:"
                       android:textStyle="bold"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_margin="10dp"
                       android:text="Nhà cung cấp:"
                       android:textStyle="bold"/>

               </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_weight="3">
                <TextView
                    android:id="@+id/txvMaSP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Mã sản phẩm"
                    />
                <TextView
                    android:id="@+id/txvTenSP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Tên sản phẩm"
                    />
                <TextView
                    android:id="@+id/txvDonViTinh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Đơn vị tính"
                    />
                <TextView
                    android:id="@+id/txvLoaiSP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Loại sản phẩm"
                    />
                <TextView
                    android:id="@+id/txvNhaCC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Nhà cung cấp"
                    />

            </LinearLayout>
               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="2"
                   android:layout_margin="30dp"
                   android:orientation="vertical"
                   android:gravity="center"
                   >

                   <ImageView
                       android:id="@+id/imvSP"
                       android:layout_width="200dp"
                       android:layout_height="200dp"
                       android:layout_margin="10dp"
                       android:scaleType="fitXY"
                       android:src="@drawable/cubealime1"/>

                   <Button
                       android:id="@+id/btnAddImage"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Thêm hình ảnh"
                       android:padding="10dp"
                       android:background="@color/main_color"
                       android:textColor="@color/white"
                       />
               </LinearLayout>

           </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>