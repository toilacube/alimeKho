<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".DetailSanPham">

    <Button
        android:id="@+id/btn_back_san_pham"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/baseline_arrow_back_ios_24"
        android:layout_margin="20dp"
        android:text="Chi tiết sản phẩm"
        android:textSize="20dp"
        android:textColor="@color/main_color"
        android:textStyle="bold"
        />
    <androidx.cardview.widget.CardView
        android:layout_margin="40dp"
        app:cardCornerRadius="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:padding="15dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:background="@color/gray_img"
                android:textColor="@color/gray_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thông tin san pham" />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_margin="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Mã san pham: "
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <TextView
                    android:id="@+id/tv_id"
                    android:padding="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/tv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView" />
                <TextView
                    android:id="@+id/tv_2"
                    android:padding="10dp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/tv_1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên san pham:" />
                <TextView
                    android:id="@+id/tv_name"
                    android:padding="10dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_1"
                    app:layout_constraintLeft_toRightOf="@+id/tv_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView" />
                <TextView
                    android:id="@+id/tv_3"
                    android:padding="10dp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/tv_2"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Don gia: " />
                <TextView
                    android:id="@+id/tv_donGia"
                    android:padding="10dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_2"
                    app:layout_constraintLeft_toRightOf="@+id/tv_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView" />
                <TextView
                    android:id="@+id/tv_4"
                    android:padding="10dp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/tv_3"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="So luong" />
                <TextView
                    android:id="@+id/tv_soLuong"
                    android:padding="10dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_3"
                    app:layout_constraintLeft_toRightOf="@+id/tv_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView" />
                <TextView
                    android:id="@+id/tv_5"
                    android:padding="10dp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/tv_4"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NSX: " />
                <TextView
                    android:id="@+id/tv_NSX"
                    android:padding="10dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_4"
                    app:layout_constraintLeft_toRightOf="@+id/tv_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView" />
                <TextView
                    android:id="@+id/tv_6"
                    android:padding="10dp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/tv_5"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HSD: " />
                <TextView
                    android:id="@+id/tv_HSD"
                    android:padding="10dp"

                    app:layout_constraintTop_toBottomOf="@id/tv_5"
                    app:layout_constraintLeft_toRightOf="@+id/tv_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView" />
                <TextView
                    android:id="@+id/tv_7"
                    android:padding="10dp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/tv_6"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phan loai: " />

                <TextView
                    android:id="@+id/tv_loaiSP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="TextView"
                    app:layout_constraintLeft_toRightOf="@+id/tv_7"
                    app:layout_constraintTop_toBottomOf="@id/tv_6" />
                <TextView
                    android:id="@+id/tv_8"
                    android:padding="10dp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/tv_7"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Don vi tinh: " />
                <TextView
                    android:id="@+id/tv_donViTinh"
                    android:padding="10dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_7"
                    app:layout_constraintLeft_toRightOf="@+id/tv_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/main_color"
            android:text="Sửa"
            android:layout_marginRight="30dp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/main_color"
            android:text="Xóa"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold"
            />
    </LinearLayout>

</LinearLayout>