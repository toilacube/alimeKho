<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.DetailEmployeeActivity">

    <Button
        android:id="@+id/btn_back_employee"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/baseline_arrow_back_ios_24"
        android:layout_margin="20dp"
        android:text="Chi tiết nhân viên"
        android:textSize="20dp"
        android:textColor="@color/main"
        android:textStyle="bold"
        />
    <androidx.cardview.widget.CardView
        android:layout_margin="40dp"
        app:cardCornerRadius="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:padding="15dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:background="@color/gray_img"
                android:textColor="@color/gray_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thông tin nhân viên" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_margin="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_1"
                        android:textStyle="bold"
                        android:padding="10dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mã nhân viên: " />
                    <TextView
                        android:id="@+id/tv_id"
                        android:padding="10dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/tv_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView" />
                    <TextView
                        android:id="@+id/tv_2"
                        android:padding="10dp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toBottomOf="@id/tv_1"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tên nhân viên:" />
                    <TextView
                        android:id="@+id/tv_name"
                        android:padding="10dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_1"
                        app:layout_constraintLeft_toRightOf="@+id/tv_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView" />
                    <TextView
                        android:id="@+id/tv_3"
                        android:padding="10dp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toBottomOf="@id/tv_2"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chức vụ: " />
                    <TextView
                        android:id="@+id/tv_title"
                        android:padding="10dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_2"
                        app:layout_constraintLeft_toRightOf="@+id/tv_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView" />
                    <TextView
                        android:id="@+id/tv_4"
                        android:padding="10dp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toBottomOf="@id/tv_3"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ngày sinh" />
                    <TextView
                        android:id="@+id/tv_birth"
                        android:padding="10dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_3"
                        app:layout_constraintLeft_toRightOf="@+id/tv_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView" />
                    <TextView
                        android:id="@+id/tv_5"
                        android:padding="10dp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toBottomOf="@id/tv_4"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Số CMDN/CCCD: " />
                    <TextView
                        android:id="@+id/tv_identify"
                        android:padding="10dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_4"
                        app:layout_constraintLeft_toRightOf="@+id/tv_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView" />
                    <TextView
                        android:id="@+id/tv_6"
                        android:padding="10dp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toBottomOf="@id/tv_5"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Số điện thoại: " />
                    <TextView
                        android:id="@+id/tv_phone"
                        android:padding="10dp"

                        app:layout_constraintTop_toBottomOf="@id/tv_5"
                        app:layout_constraintLeft_toRightOf="@+id/tv_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_margin="30dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    >

                    <ImageView
                        android:id="@+id/imvSP"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_margin="10dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/cubealime1"/>

                    <Button
                        android:id="@+id/btnAddImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thêm hình ảnh"
                        android:padding="10dp"
                        android:background="@color/main_color"
                        android:textColor="@color/white"
                        />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/main"
            android:text="Sửa"
            android:layout_marginRight="30dp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/main"
            android:text="Xóa"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold"
            />
    </LinearLayout>

</LinearLayout>