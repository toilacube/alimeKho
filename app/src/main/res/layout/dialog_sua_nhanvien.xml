<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/txvSua"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="SỬA THÔNG TIN NHÂN VIÊN"
        android:textStyle="bold"
        android:textSize="20dp"
        android:background="@color/main_color"
        android:textColor="@color/white"
        android:gravity="center"
        android:padding="15dp"
        />
    <LinearLayout
        android:id="@+id/llUpdatet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="horizontal"
        android:weightSum="8"
        android:gravity="center|top"
        android:layout_below="@id/txvSua"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_weight="2"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="Tên nhân viên: "
                android:textSize="14dp"
                android:textColor="@color/black"
                android:layout_margin="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="Ngày sinh: "
                android:textSize="14dp"
                android:textColor="@color/black"
                android:layout_margin="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="Ngày vào làm: "
                android:textSize="14dp"
                android:textColor="@color/black"
                android:layout_margin="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="CCCD/CMND: "
                android:textSize="14dp"
                android:textColor="@color/black"
                android:layout_margin="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="SDT: "
                android:textSize="14dp"
                android:textColor="@color/black"
                android:layout_margin="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="Chức vụ: "
                android:textSize="14dp"
                android:textColor="@color/black"
                android:layout_margin="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="Địa chỉ: "
                android:textSize="14dp"
                android:textColor="@color/black"
                android:layout_margin="5dp"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_weight="6"
            >
            <EditText
                android:id="@+id/edtTenNhanVien"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@color/gray_img"
                android:layout_margin="5dp"/>
            <EditText
                android:id="@+id/edtNgaySinh"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@color/gray_img"
                android:drawableEnd="@drawable/baseline_edit_calendar_24"
                android:layout_margin="5dp" />
            <EditText
                android:id="@+id/edtNgayVaoLam"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@color/gray_img"
                android:drawableEnd="@drawable/baseline_edit_calendar_24"
                android:layout_margin="5dp" />

            <EditText
                android:id="@+id/edtCCCD"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@color/gray_img"
                android:layout_margin="5dp"/>
            <EditText
                android:id="@+id/edtSDT"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@color/gray_img"
                android:layout_margin="5dp"/>

            <Spinner
                android:id="@+id/spChucVu"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@color/gray_img"
                android:layout_margin="5dp"/>

            <EditText
                android:id="@+id/edtAddress"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@color/gray_img"
                android:layout_margin="5dp"/>

        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@id/llUpdatet"
        >

        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="SỬA"
            android:background="@drawable/button_background"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_margin="20dp"/>
        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Hủy"
            android:background="@drawable/button_background"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_margin="20dp"/>

    </LinearLayout>
</RelativeLayout>